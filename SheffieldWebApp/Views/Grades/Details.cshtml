@model SheffieldWebApp.Models.Grade

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Grade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GradeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GradeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GivenMarks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GivenMarks)
        </dd>
    </dl>
</div>


<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model?.Id">Edit</a>
    @if (User.IsInRole("Teacher"))
    {
        <a asp-controller="TeachersDashboard" class="btn btn-secondary" asp-action="Index">Back to List</a>
    }
    else if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" class="btn btn-secondary" asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-controller="TeachersDashboard" class="btn btn-secondary" asp-action="Index">Back to List</a>
    }
</div>
