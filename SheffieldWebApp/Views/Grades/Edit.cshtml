@model SheffieldWebApp.Models.Grade

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Edit</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @if(User.IsInRole("Teacher")){

                    <input type="hidden" asp-for="GradeName" class="form-control" value="@Model.GradeName" />
                }else{
                    <label asp-for="GradeName" class="control-label"></label>

                    <input asp-for="GradeName" class="form-control" />
                }
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if(User.IsInRole("Teacher")){
                    <input type="hidden" asp-for="SubjectName" class="form-control" value="@Model.SubjectName" />
                }else{
                    <label asp-for="SubjectName" class="control-label"></label>

                    <input asp-for="SubjectName" class="form-control" />

                }
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GivenMarks" class="control-label"></label>
                <input asp-for="GivenMarks" class="form-control" />
                <span asp-validation-for="GivenMarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Teacher"))
    {
        <a asp-controller="TeachersDashboard" asp-action="Index">Back to List</a>
    }
    else if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="Index">Back to List</a>
    }
    else
    {
        <a asp-controller="TeachersDashboard" asp-action="Index">Back to List</a>

    }
</div>

