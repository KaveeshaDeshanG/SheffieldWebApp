@model SheffieldWebApp.Models.Student

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="card mt-4 shadow" style="width: 50%;">
        <div class="card-header text-center">
            <h4 class="mt-3">Edit Student Profile</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <input asp-for="RegistrationId" class="form-control" value="@Model.RegistrationId" type="hidden" />
                    <span asp-validation-for="RegistrationId" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly value="@Model.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input asp-for="GradeId" class="form-control" type="hidden" value="0" />
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Save" class="btn btn-primary col-8" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    @if(User.IsInRole("Admin")){
        <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Back to List</a>
    }else{
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to List</a>
    }
</div>
